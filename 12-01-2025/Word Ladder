from collections import deque
def ladderLength(b, e, w):
    s = set(w)
    q = deque([(b,1)])
    while q:
        word, l = q.popleft()
        if word == e:
            return l
        for i in range(len(word)):
            for c in 'abcdefghijklmnopqrstuvwxyz':
                nw = word[:i] + c + word[i+1:]
                if nw in s:
                    s.remove(nw)
                    q.append((nw, l+1))
    return 0
