import java.util.*;
class WaterBill {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int units=s.nextInt();
        double bill;
        if(units<=100)bill=units*2;
        else if(units<=200)bill=100*2+(units-100)*3;
        else bill=100*2+100*3+(units-200)*5;
        System.out.println(bill);
    }
}
