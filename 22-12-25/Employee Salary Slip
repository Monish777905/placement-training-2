import java.util.*;
class SalarySlip {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        double basic=s.nextDouble();
        double hra=basic*0.2;
        double da=basic*0.15;
        double pf=basic*0.1;
        double net=basic+hra+da-pf;
        System.out.println(net);
    }
}
